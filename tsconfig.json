{
  "compilerOptions": {
    "strictNullChecks": false,
    "allowSyntheticDefaultImports":  true,
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "types": [ "jquery" ],
    "outDir": "./dist/commonjs",
    "strict": true,
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "./typings/**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/*"],
  "rules": {
    "interface-name" : [true, "never-prefix"]
  }
}
