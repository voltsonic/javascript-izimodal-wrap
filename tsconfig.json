{
  "compilerOptions": {
    "strictNullChecks": false,
    "allowSyntheticDefaultImports":  true,
    "skipLibCheck": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "declaration": true,
    "checkJs": true,
    "outDir": "./dist/commonjs",
    "rootDir": "./src/",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types-internal"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
